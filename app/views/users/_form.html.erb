<%= simple_form_for @user, url: users_path do |f| %>
  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li class="white-text"><%= msg %></li>
    <% end %>
  </ul>
  <% end %>


  <div class="card-row-container">
    <div class="register-card">
      <div class="card-heading">
        <p>Email</p>
      </div>
      <div class="card-center">
        <%= f.text_field :email, class: "text-input" %>
      </div>
      <div class="card-footer">
        <p>Your email address is not shared with anyone and Brew Cards doesn't spam you...that's not cool.</p>
      </div>
    </div>

    <div class="register-card">
      <div class="card-heading">
        <% if @user.persisted? %>
          <p>New Password</p>
        <% else %>
          <p>Password</p>
        <% end %>
      </div>
      <div class="card-center">
        <%= f.password_field :password, class: "text-input catpants-password" %>
      </div>
      <div class="card-footer">
        <%= label_tag :password, "", class:"catpants" %>
      </div>
    </div>
  </div>

  <div class="card-row-container">
    <div class="register-card">
      <div class="card-heading">
        <% if @user.persisted? %>
          <p>New Password Confirmation</p>
        <% else %>
          <p>Password Confirmation</p>
        <% end %>
      </div>
      <div class="card-center">
        <%= f.password_field :password_confirmation, class: "text-input catpants-password" %>
      </div>
      <div class="card-footer">
        <%= label_tag :password_confirmation, "", class:"catpants" %>
      </div>
    </div>

    <div class="register-card">
      <div class="card-heading">
        <p>Click Save!</p>
      </div>

      <div class="card-center">
        <%= f.button :submit, "Save", class: "sign-up-button" %>
      </div>

      <div class="card-footer">
        <%= link_to "Cat Pants Gem","https://rubygems.org/gems/catpants", class: "cat-pants-button" %>
      </div>
    </div>

  </div>



<% end %>
